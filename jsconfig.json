{
	"compilerOptions": {
		"baseUrl": "src",
		"checkJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"dom",
			"es2020"
		],
		"module": "ES2020",
		"moduleResolution": "node12",
		"noEmit": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"outDir": "./dist/static/js",
		"preserveConstEnums": true,
		"rootDir": "./src",
		"strict": true,
		"target": "es2020",
		"typeRoots" : [
			"./node_modules/@types",
			"./src/@types"
			]
	},
	"include": [
		"src/*.mjs",
		"src/**/*.mjs"
	],
	"exclude": [
		"node_modules"
	]
}
