{
	"compileOnSave": true,
	"compilerOptions": {
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"dom",
			"es2019"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": false,
		"outDir": "./dist/static/js",
		"preserveConstEnums": true,
		"removeComments": true,
		"rootDir": "./src",
		"sourceMap": true,
		"sourceRoot": "./src",
		"strict": true,
		"target": "es2018",
		"typeRoots" : [
			"./node_modules/@types",
			"./src/@types"
			]
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
